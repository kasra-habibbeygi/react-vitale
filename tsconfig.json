{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"jsx": "react-jsx",
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "types",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"*"
			]
		},
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"types",
		"src/**/*.stories.tsx",
	]
}